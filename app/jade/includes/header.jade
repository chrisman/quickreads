nav.navbar.navbar-static-top.navbar-inverse
  .container
    .navbar-header
      button(type='button' data-toggle='collapse' data-target='#mynav' aria-expanded='false' aria-controls='navbar').navbar-toggle.collapsed
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(ui-sref="index") #[i.fa.fa-book] {{ title }}
    #mynav(area-expanded='false' style='height: 1px;').collapse.navbar-collapse
      ul.nav.navbar-nav
        li 
          a(ui-sref="index") Home
        li 
          a(ui-sref="about") About
        li 
          a(ui-sref="faq") FAQ
        li 
          a(ui-sref="contact") Contact
      form.navbar-form.navbar-right(ng-submit="login()" ng-controller="LoginController")
        .form-group
          input(ng-model="username" type="text" placeholder="email").form-control
        .form-group
          input(ng-model="password" type="password" placeholder="password").form-control
        button(type=submit).btn.btn-successk Sign in

